	<!-- 조건에 맞는 공통코드 목록을 조회 한다. -->
	<select id="CommCodeDAO.selectCommCodeAllList" parameterClass="egovframework.admin.basicinf.service.CommCode" resultMap="CommCodeSheet">
		SELECT GRP_CD
		     , DITC_CD
		     , DITC_NM
		     , DITC_NM_ENG		
		     , CD_EXP
		     , CD_EXP_ENG		        
		     , V_ORDER
		     , USE_YN
		 FROM TB_COMM_CODE
		WHERE 1 = 1

		<isNotEmpty property="useYn"> 
			AND USE_YN = #useYn#
		</isNotEmpty>

		<isEmpty property="serVal">
			<isEmpty property="grpCd" prepend="AND">
				GRP_CD = '00000'
			</isEmpty>
			<isNotEmpty property="grpCd" prepend="AND">
				GRP_CD = #grpCd#
			</isNotEmpty>
		</isEmpty>

		<isNotEmpty property="serVal">
			AND GRP_CD = '00000'
			<isEqual property="serSel" compareValue="NM">
				AND DITC_NM LIKE
				'%'||#serVal#||'%'
			</isEqual>
			<isEqual property="serSel" compareValue="ENG">
				AND DITC_NM_ENG LIKE
				'%'||#serVal#||'%'
			</isEqual>
			<isEqual property="serSel" compareValue="ALL">
				AND
				(
				DITC_NM LIKE
				'%'||#serVal#||'%'
				OR DITC_NM_ENG LIKE '%'||#serVal#||'%'
				)
			</isEqual>
		</isNotEmpty>
		
		<isEmpty property="grpCd">
			ORDER BY DITC_CD
		</isEmpty>
		<isNotEmpty property="grpCd">
			ORDER BY V_ORDER, DITC_CD
		</isNotEmpty>
	</select>

